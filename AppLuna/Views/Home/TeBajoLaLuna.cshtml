<style>
    .luna {
        width: 10vw; 
        height: 10vw;
        border-radius: 50%;
        position: relative;
        animation: moverLuna 60s linear forwards;
    }

        .luna::before {
            content: "";
            display: block;
            width: 8vw; 
            height: 8vw;
            background-image: url("../images/FondoLuna.png"); 
            background-size: cover; 
            background-repeat: no-repeat; 
            background-position: center;
            border-radius: 50%;
            position: absolute;
            top: 1vw; 
            left: 1vw;
            box-shadow: 0 0 2vw #f5f5f5;
        }
    .image-content{
        background-image: url("../images/PaisajeNoche.jpg");
        background-size: cover; 
        background-repeat: no-repeat; 
        background-position: center;
        height: 100vh;
    }

    .img-person{
        height: 10vw;
        margin-top: 290px;
        animation: moverPersona 20s linear forwards;
    }

    .texto-container {
        font-size: 24px;
        font-family: 'Arial', sans-serif;
        margin-top: 45px;
        margin-left: 45px;
        position: relative;
        display: block;
        width: 750px;
    }
</style>
<div class="row image-content mt-5" style="color:white">
    <input type="hidden" value="@ViewBag.Name" id="nameInput"/>
    <div class="col-md-4 " >
        <div class="texto-container">
            <p id="animacionTexto"></p>
        </div>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="luna"></div>
    </div>
    <div class="col-md-4">
        <div id="content-button-click">
            
        </div>
    </div>
    <div class="col-md-4">
        <img class="img-person" src="../images/personRun.gif" />
    </div>
    <div class="col-md-4"></div>
</div>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        var palabras = ["No ", "puedo ", "traerte ", "la ", "luna, ", "pero ", "puedo ", "prometerte ", "que ", "estaré ", "a ", "tu ", "lado ", "en ", "todas ",
            "las ", "fases ", "de ", "la ", "vida, ", "compartiendo ", "risas ", "en ", "las ", "noches ", "brillantes ", "y ", "abrazándote ", "en ", "las ", "noches ", "oscuras."
            ," Señorita ", "Geaneth."];
        function animarEscritura(index, palabra, elemento) {
            if (index < palabra.length) {
                elemento.innerHTML += palabra.charAt(index);
                index++;
                setTimeout(function () {
                    animarEscritura(index, palabra, elemento);
                }, 100);
            }
        }
        function iniciarAnimacion() {
            var elemento = document.getElementById("animacionTexto");
            if (elemento) {
                elemento.innerHTML = "";
                palabras.forEach(function (palabra, index) {
                    setTimeout(function () {
                        animarEscritura(0, palabra, elemento);
                    }, index * 2000); 
                });
            } else {
                console.error("No se pudo encontrar el elemento con el ID 'animacionTexto'.");
            }
        }
        function aparecerButtonRosas() {
            var contentbuttonclick = document.getElementById("content-button-click");
            setTimeout(function () {
                contentbuttonclick.innerHTML = `<button class='btn btn-outline-light btn-sm' id='btnRosasAbrir' type='button'><span>«Haz clic aquí»</span></button>`;
                GenerarRosasButton();
            },70000)
        }
        function GenerarRosasButton() {
            var btnRosasAbrir = document.getElementById("btnRosasAbrir");
            var nameInput = document.getElementById("nameInput").value;
            console.log(btnRosasAbrir)
            btnRosasAbrir.addEventListener("click", function (e) {
                e.preventDefault();
                Swal.fire({
                    title: `Señorita : ${nameInput}`,
                    text: `Le entrego una rosa virtual`,
                    imageUrl: "../images/RosasAzules.gif",
                    imageWidth: 450,
                    imageHeight: 502,
                    imageAlt: ""
                });
            });
        }
        iniciarAnimacion();
        aparecerButtonRosas();
        
    });
    
</script>